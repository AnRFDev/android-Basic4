<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击穿透" />

    <RelativeLayout
        android:id="@+id/layer_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#eaeaea">

        <RelativeLayout
            android:id="@+id/layer_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="#888888">

            <TextView
                android:id="@+id/layer_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#444444"
                android:padding="4dp"
                android:text="click me"
                android:textColor="#fff" />

            <View
                android:id="@+id/layer_view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_toStartOf="@id/layer_tv1"
                android:background="#555555" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="触摸事件" />

    <RelativeLayout
        android:id="@+id/t_layer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#eaeaea">

        <RelativeLayout
            android:id="@+id/t_layer2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:background="#999999">

            <RelativeLayout
                android:id="@+id/t_layer3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="40dp"
                android:background="#666666">

                <TextView
                    android:id="@+id/t_layer_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#444444"
                    android:padding="3dp"
                    android:text="touch through"
                    android:textColor="#fff" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>